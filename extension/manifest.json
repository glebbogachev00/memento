{
  "manifest_version": 3,
  "name": "Memento",
  "description": "Memento tracks your life in weeks and productive time right in each new tab.",
  "version": "1.1.0",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Memento",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://twitter.com/*",
    "https://www.instagram.com/*",
    "https://www.facebook.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://twitter.com/*",
        "https://www.instagram.com/*",
        "https://www.facebook.com/*"
      ],
      "js": [
        "shared.js",
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
